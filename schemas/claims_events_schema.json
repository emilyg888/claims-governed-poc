{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "claims_events_schema",
  "type": "object",
  "required": [
    "batch_date",
    "claim_id",
    "event_ts",
    "event_type",
    "currency",
    "source_system",
    "note"
  ],
  "properties": {
    "batch_date": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "claim_id": {
      "type": "string",
      "minLength": 1
    },
    "event_ts": {
      "type": "string",
      "format": "date-time"
    },
    "event_type": {
      "type": "string",
      "enum": [
        "CREATED",
        "UPDATED",
        "STATUS_CHANGE",
        "PAYMENT",
        "NOTE",
        "ADJUSTMENT"
      ]
    },
    "old_status": {
      "type": "string"
    },
    "new_status": {
      "type": "string"
    },
    "amount_delta": {
      "type": ["number", "string", "null"]
    },
    "currency": {
      "type": "string",
      "minLength": 3,
      "maxLength": 3
    },
    "source_system": {
      "type": "string",
      "minLength": 1
    },
    "note": {
      "type": "string"
    }
  },
  "additionalProperties": true
}
